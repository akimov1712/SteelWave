<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name_income"
        style="@style/sw_textView_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ошибка"
        android:textColor="@color/sw_black_transparent"
        app:layout_constraintEnd_toStartOf="@+id/tv_income"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_income"
        style="@style/sw_textView_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/sw_purple"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_income"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_income" />

</androidx.constraintlayout.widget.ConstraintLayout>