<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.trafic.TraficFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/tv_trafic"
                style="@style/sw_textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/trafic_title"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_project_finance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_trafic"
                app:layout_constraintStart_toEndOf="@+id/tv_trafic"
                app:layout_constraintTop_toTopOf="@+id/tv_trafic">

                <TextView
                    android:id="@+id/tv_project_trafic"
                    style="@style/sw_textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Unotes"
                    android:textColor="@color/sw_purple"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/icon_filter"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_project_trafic"
                    app:layout_constraintStart_toEndOf="@+id/tv_project_trafic"
                    app:layout_constraintTop_toTopOf="@+id/tv_project_trafic" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_all_projects_company"
                style="@style/sw_textView_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_activity_in_site"
                android:textColor="@color/sw_black_transparent"
                app:layout_constraintStart_toStartOf="@+id/tv_trafic"
                app:layout_constraintTop_toBottomOf="@+id/tv_trafic" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_choice_date_in_total_visits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/tv_all_projects_company"
                app:layout_constraintTop_toBottomOf="@+id/tv_all_projects_company">

                <TextView
                    android:id="@+id/tv_date_day"
                    style="@style/sw_textView_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="21"
                    android:textColor="@color/sw_purple"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginStart="6dp"
                    android:background="@color/sw_purple_transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_date_day"
                    app:layout_constraintStart_toEndOf="@+id/tv_date_day"
                    app:layout_constraintTop_toTopOf="@+id/tv_date_day" />

                <TextView
                    android:id="@+id/tv_date_month"
                    style="@style/sw_textView_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:paddingTop="3dp"
                    android:text="01"
                    android:textColor="@color/sw_purple"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="6dp"
                    android:layout_marginStart="6dp"
                    android:background="@color/sw_purple_transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_date_day"
                    app:layout_constraintStart_toEndOf="@+id/tv_date_month"
                    app:layout_constraintTop_toTopOf="@+id/tv_date_day" />

                <TextView
                    android:id="@+id/tv_date_year"
                    style="@style/sw_textView_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:paddingTop="3dp"
                    android:text="2022"
                    android:textColor="@color/sw_purple"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/view2"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/sw_purple_transparent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_date_year"
                    app:layout_constraintStart_toStartOf="@+id/tv_date_day"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_month" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_visits"
                style="@style/sw_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:outlineSpotShadowColor="@color/sw_green"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_choice_date_in_total_visits">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView7"
                            style="@style/sw_textView_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_visits"
                            android:textSize="@dimen/normal_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.55" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.65" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/sw_purple_transparent"
                            app:layout_constraintBottom_toBottomOf="@+id/textView7"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintStart_toStartOf="@+id/guideline2"
                            app:layout_constraintTop_toTopOf="@+id/textView7" />

                        <TextView
                            android:id="@+id/tv_visits_project"
                            style="@style/sw_textView_visits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$4 830 ч/с"
                            android:textSize="@dimen/normal_size"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textView7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView7" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_visits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                        tools:itemCount="8"
                        tools:listitem="@layout/item_stats" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_click_stats"
                style="@style/sw_textView_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/click_stats"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_visits" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_click_stats"
                app:layout_constraintStart_toStartOf="@+id/tv_click_stats"
                app:layout_constraintTop_toBottomOf="@+id/tv_click_stats">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_choice_date_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_date_day_from"
                        style="@style/sw_textView_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="21"
                        android:textColor="@color/sw_purple"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="6dp"
                        android:layout_marginStart="6dp"
                        android:background="@color/sw_purple_transparent"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_date_day_from"
                        app:layout_constraintStart_toEndOf="@+id/tv_date_day_from"
                        app:layout_constraintTop_toTopOf="@+id/tv_date_day_from" />

                    <TextView
                        android:id="@+id/tv_date_month_from"
                        style="@style/sw_textView_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:paddingTop="3dp"
                        android:text="01"
                        android:textColor="@color/sw_purple"
                        app:layout_constraintBottom_toBottomOf="@+id/view5"
                        app:layout_constraintStart_toEndOf="@+id/view5"
                        app:layout_constraintTop_toTopOf="@+id/view5" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="6dp"
                        android:layout_marginStart="6dp"
                        android:background="@color/sw_purple_transparent"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_date_day_from"
                        app:layout_constraintStart_toEndOf="@+id/tv_date_month_from"
                        app:layout_constraintTop_toTopOf="@+id/tv_date_day_from" />

                    <TextView
                        android:id="@+id/tv_date_year_from"
                        style="@style/sw_textView_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:paddingTop="3dp"
                        android:text="2022"
                        android:textColor="@color/sw_purple"
                        app:layout_constraintBottom_toBottomOf="@+id/view5"
                        app:layout_constraintStart_toEndOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view5" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/sw_purple_transparent"
                        app:layout_constraintEnd_toEndOf="@+id/tv_date_year_from"
                        app:layout_constraintStart_toStartOf="@+id/tv_date_day_from"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_month_from" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="—"
                    android:textColor="@color/sw_black"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_choice_date_from"
                    app:layout_constraintEnd_toStartOf="@+id/cl_choice_date_to"
                    app:layout_constraintStart_toEndOf="@+id/cl_choice_date_from"
                    app:layout_constraintTop_toTopOf="@+id/cl_choice_date_from" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_choice_date_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_date_day_to"
                        style="@style/sw_textView_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="21"
                        android:textColor="@color/sw_purple"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="6dp"
                        android:layout_marginStart="6dp"
                        android:background="@color/sw_purple_transparent"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_date_day_to"
                        app:layout_constraintStart_toEndOf="@+id/tv_date_day_to"
                        app:layout_constraintTop_toTopOf="@+id/tv_date_day_to" />

                    <TextView
                        android:id="@+id/tv_date_month_to"
                        style="@style/sw_textView_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:paddingTop="3dp"
                        android:text="01"
                        android:textColor="@color/sw_purple"
                        app:layout_constraintBottom_toBottomOf="@+id/view7"
                        app:layout_constraintStart_toEndOf="@+id/view7"
                        app:layout_constraintTop_toTopOf="@+id/view7" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="6dp"
                        android:layout_marginStart="6dp"
                        android:background="@color/sw_purple_transparent"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_date_day_to"
                        app:layout_constraintStart_toEndOf="@+id/tv_date_month_to"
                        app:layout_constraintTop_toTopOf="@+id/tv_date_day_to" />

                    <TextView
                        android:id="@+id/tv_date_year_to"
                        style="@style/sw_textView_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:paddingTop="3dp"
                        android:text="2022"
                        android:textColor="@color/sw_purple"
                        app:layout_constraintBottom_toBottomOf="@+id/view7"
                        app:layout_constraintStart_toEndOf="@+id/view8"
                        app:layout_constraintTop_toTopOf="@+id/view7" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/sw_purple_transparent"
                        app:layout_constraintEnd_toEndOf="@+id/tv_date_year_to"
                        app:layout_constraintStart_toStartOf="@+id/tv_date_day_to"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_month_to" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_month_expenses"
                style="@style/sw_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_month_expenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="20dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_stats" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>