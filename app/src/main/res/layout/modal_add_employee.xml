<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        style="@style/sw_cardView"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:minWidth="360dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                style="@style/sw_textView_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/add_employee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_choice_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_registration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/et_login"
                        style="@style/sw_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:hint="@string/employee_login"
                        android:inputType="textPersonName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_password"
                        style="@style/sw_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/password_employee"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="@+id/et_login"
                        app:layout_constraintStart_toStartOf="@+id/et_login"
                        app:layout_constraintTop_toBottomOf="@+id/et_login" />

                    <EditText
                        android:id="@+id/et_secret_word"
                        style="@style/sw_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/secret_word_employee"
                        android:inputType="textPersonName"
                        app:layout_constraintEnd_toEndOf="@+id/et_password"
                        app:layout_constraintStart_toStartOf="@+id/et_password"
                        app:layout_constraintTop_toBottomOf="@+id/et_password" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_personal_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/et_firstname"
                        style="@style/sw_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:hint="@string/firstname"
                        android:inputType="textPersonName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_lastname"
                        style="@style/sw_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/lastname"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="@+id/et_firstname"
                        app:layout_constraintStart_toStartOf="@+id/et_firstname"
                        app:layout_constraintTop_toBottomOf="@+id/et_firstname" />

                    <EditText
                        android:id="@+id/et_middlename"
                        style="@style/sw_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/middlename"
                        android:inputType="textPersonName"
                        app:layout_constraintEnd_toEndOf="@+id/et_lastname"
                        app:layout_constraintStart_toStartOf="@+id/et_lastname"
                        app:layout_constraintTop_toBottomOf="@+id/et_lastname" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_paste_image"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_choice_image"
                        app:layout_constraintEnd_toEndOf="@+id/et_middlename"
                        app:layout_constraintStart_toStartOf="@+id/et_middlename"
                        app:layout_constraintTop_toBottomOf="@+id/et_middlename">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_paste_photo"
                            app:layout_constraintBottom_toTopOf="@+id/tv_paste_cover"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/tv_paste_cover"
                            style="@style/sw_textView_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/paste_photo"
                            android:textColor="@color/sw_black_transparent"
                            android:textSize="@dimen/small_size"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_position"
                        style="@style/sw_til_dropMenu"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="2dp"
                        app:layout_constraintEnd_toEndOf="@+id/cl_paste_image"
                        app:layout_constraintStart_toStartOf="@+id/cl_paste_image"
                        app:layout_constraintTop_toBottomOf="@+id/cl_paste_image">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/et_proffesion"
                            style="@style/sw_til_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_til_underline"
                            android:hint="@string/position" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_project"
                        style="@style/sw_til_dropMenu"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:paddingHorizontal="2dp"
                        app:layout_constraintEnd_toEndOf="@+id/cl_paste_image"
                        app:layout_constraintStart_toStartOf="@+id/cl_paste_image"
                        app:layout_constraintTop_toBottomOf="@+id/til_position">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/et_project"
                            style="@style/sw_til_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_til_underline"
                            android:hint="@string/project" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/et_salary"
                        style="@style/sw_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/salary_procent"
                        android:inputType="number"
                        android:maxLength="3"
                        app:layout_constraintEnd_toEndOf="@+id/et_firstname"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/et_firstname"
                        app:layout_constraintTop_toBottomOf="@+id/til_project" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continue"
                style="@style/sw_button_fill"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:text="Продолжить"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_choice_date" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                style="@style/sw_button_fill"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="@string/add"
                android:translationZ="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_choice_date" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                style="@style/sw_button_empty"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_continue"
                app:layout_constraintStart_toStartOf="@+id/btn_continue"
                app:layout_constraintTop_toBottomOf="@+id/btn_continue" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</ScrollView>